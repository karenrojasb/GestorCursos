// OBTENER NOMBRES DE PROFESORES CON PUBLICO = 2
async obtenerNombreProfesor() {
  try {
    const profesores = await this.prisma.$queryRaw<
      Array<{ id_emp: string; nombre: string }>
    >`
      SELECT id_emp, nombre 
      FROM gescur.emp_nomina 
      WHERE publico = 2
    `;

    return profesores;
  } catch (error) {
    console.error('Error al obtener nombres de profesores con p√∫blico 2:', error);
    throw new Error('No se pudieron obtener los nombres de los profesores.');
  }
}





  @Get('nombres')
  async obtenerNombreProfesor() {
    return this.cursosService.obtenerNombreProfesor();
 