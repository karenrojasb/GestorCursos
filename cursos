async obtenerProfesorPorId(id: number): Promise<{ id_emp: number; nombre: string } | null> {
  const query = `SELECT id_emp, nombre FROM gescur.emp_nomina WHERE id_emp = ${id}`;
  const profesor = await this.prisma.$queryRawUnsafe<{ id_emp: number; nombre: string }[]>(query);
  return profesor[0] || null;
}