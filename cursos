{cursoAEditar && (
  <CursoEditarModal
    curso={cursoAEditar}
    onClose={() => setCursoAEditar(null)} // Cierra el modal de edición
    onSave={(cursoEditado) => {
      // Aquí puedes actualizar la lista de cursos con el curso editado
      setCursos(cursos.map(curso => curso.id === cursoEditado.id ? cursoEditado : curso));
      setCursosFiltrados(cursosFiltrados.map(curso => curso.id === cursoEditado.id ? cursoEditado : curso));
      setCursoAEditar(null); // Cierra el modal después de guardar los cambios
    }}
  />
)}