async getCursosPorProfesor(idProfesor: number) {
  return this.prisma.$queryRawUnsafe<
    Array<{
      id: number;
      NombreCurso: string;
      Profesor: number;
      SegundoPro: number;
      Lugar: string;
      FechaInicio: Date;
      FechaFin: Date;
      Horario: string;
    }>
  >(
    `SELECT 
      c.id,
      c.NombreCurso,
      c.Profesor,
      c.SegundoPro,
      c.Lugar,
      c.FechaInicio,
      c.FechaFin,
      c.Horario
    FROM gescur.Cursos c
    WHERE c.Profesor = ${idProfesor} OR c.SegundoPro = ${idProfesor}`
  );
}



@Get('cursos-profesor/:idProfesor')
getCursosPorProfesor(@Param('idProfesor') id: string) {
  return this.inscripcionesService.getCursosPorProfesor(Number(id));
}
