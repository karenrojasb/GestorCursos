setCursos((prevCursos) =>
  prevCursos.map((curso): Curso => {
    if (curso.id !== idCur) return curso;

    const inscritosActualizados: Inscrito[] = (curso.Inscritos || []).map((inscrito: Inscrito): Inscrito => {
      if (inscrito.id === idInscrito) {
        return {
          ...inscrito,
          Notas: [{
            ...nuevaNota,
            NotaEspecificacion: descripcion,
          }],
        };
      }
      return inscrito;
    });

    return {
      ...curso,
      Inscritos: inscritosActualizados,
    };
  })
);

setCursosFiltrados((prevCursos) =>
  prevCursos.map((curso): Curso => {
    if (curso.id !== idCur) return curso;

    const inscritosActualizados: Inscrito[] = (curso.Inscritos || []).map((inscrito: Inscrito): Inscrito => {
      if (inscrito.id === idInscrito) {
        return {
          ...inscrito,
          Notas: [{
            ...nuevaNota,
            NotaEspecificacion: descripcion,
          }],
        };
      }
      return inscrito;
    });

    return {
      ...curso,
      Inscritos: inscritosActualizados,
    };
  })
);