async updateCourse(id: number, data: Prisma.CursosUpdateInput) {
    console.log('ID recibido:', id);
    console.log('Datos recibidos:', data);
    try {
      return await this.prisma.cursos.update({
        where: { id },
        data,
      });
    } catch (error) {
      console.error('Error al actualizar el curso:', error);
      throw new Error('El curso no se pudo actualizar');
    }
}




  @Get(':id')
  async getCourseById(@Param('id', ParseIntPipe) id: number) {
    return this.cursosService.getCourseById(id);
  }

  // Actualizar curso por ID
  @Put(':id')
  async updateCourse(
    @Param('id', ParseIntPipe) id: number,
    @Body() updateCursoDto: UpdateCursoDto
  ) {
    return this.cursosService.updateCourse(id, updateCursoDto);
  }

