async getCursosPorProfesor(idProfesor: number) {
  return this.prisma.$queryRawUnsafe<
    Array<{
      id: number;
      NombreCurso: string;
      Profesor: number;
      SegundoPro: number;
      Lugar: string;
      Inicio: Date;
      Fin: Date;
    }>
  >(
    `SELECT 
      c.id,
      c.NombreCurso,
      c.Profesor,
      c.SegundoPro,
      c.Lugar,
      c.Inicio,
      c.Fin
    FROM gescur.Cursos c
    WHERE c.Profesor = ${idProfesor} OR c.SegundoPro = ${idProfesor}`
  );
}