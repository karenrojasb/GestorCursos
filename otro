{/* Campo Publico */}
<label className="block text-sm font-medium text-gray-700">Público</label>
<select
  name="Publico"
  value={editandoCurso.Publico}
  onChange={handleChange}
  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-[#990000] focus:border-[#990000]"
>
  {opcionesPublico.map((opcion) => (
    <option key={opcion.id} value={opcion.id}>
      {opcion.Especificacion}
    </option>
  ))}
</select>

{/* Campo Línea */}
<label className="block text-sm font-medium text-gray-700">Línea</label>
<select
  name="Linea"
  value={editandoCurso.Linea}
