  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-[#990000] focus:border-[#990000]"
>
  {opcionesLinea.map((opcion) => (
    <option key={opcion.id} value={opcion.id}>
      {opcion.Especificacion}
    </option>
  ))}
</select>

{/* Campo Modalidad */}
<label className="block text-sm font-medium text-gray-700">Modalidad</label>
<select
  name="Modalidad"
  value={editandoCurso.Modalidad}
  onChange={handleChange}
  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-[#990000] focus:border-[#990000]"
>
  {opcionesModalidad.map((opcion) => (
    <option key={opcion.id} value={opcion.id}>
      {opcion.Especificacion}
    </option>
  ))}
</select>

{/* Campo Estado */}
<label className="block text-sm font-medium text-gray-700">Estado</label>
<select
  name="Estado"
  value={editandoCurso.Estado}
  onChange={handleChange}
  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-[#990000] focus:border-[#990000]"
>
  {opcionesEstado.map((opcion) => (
    <option key={opcion.id} value={opcion.id}>
      {opcion.Especificacion}
    </option>
  ))}
</select>

{/* Campo Tipo de Curso */}
<label className="block text-sm font-medium text-gray-700">Tipo de Curso</label>
<select
  name="IdTipoCurso"
  value={editandoCurso.IdTipoCurso}
