useEffect(() => {
  const fetchOpcionesPublico = async () => {
    try {
      const response = await fetch("http://localhost:8090/api/listas/tipo/1");
      const data = await response.json();
      console.log("Opciones obtenidas:", data); // Verificar qué datos llegan
      setOpcionesPublico(data);
    } catch (error) {
      console.error("Error al obtener opciones de público:", error);
    }
  };
  fetchOpcionesPublico();
}, []);