<>
  <ChevronUpIcon className="h-5 w-5 mr-1" />
  Ver menos
</>
) : (
<>
  <ChevronDownIcon className="h-5 w-5 mr-1" />
  Ver más
</>
)}
</button>
</div>
</div>

{cursoAbierto && (
  <div className="p-4 space-y-3">
    {/* Detalles del curso */}
    <table className="w-full border text-sm">
      <tbody>
        <tr>
          <td className="font-semibold border px-2 py-1">Profesor:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.NombreProfesor}</td>
          <td className="font-semibold border px-2 py-1">Segundo Profesor:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.SegundoProfe || "N/A"}</td>
        </tr>
        <tr>
          <td className="font-semibold border px-2 py-1">Modalidad:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Modalidad}</td>
          <td className="font-semibold border px-2 py-1">Unidad:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Unidad}</td>
        </tr>
        <tr>
          <td className="font-semibold border px-2 py-1">Línea:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Linea}</td>
          <td className="font-semibold border px-2 py-1">Lugar:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Lugar}</td>
        </tr>
        <tr>
          <td className="font-semibold border px-2 py-1">Horas:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Horas}</td>
          <td className="font-semibold border px-2 py-1">Periodo:</td>
          <td className="border px-2 py-1">{inscripciones[0]?.Periodo}</td>
        </tr>
      </tbody>
    </table>

    {/* Lista de inscritos */}
    <div className="overflow-x-auto">
      <table className="min-w-full border text-sm mt-3">
        <thead className="bg-gray-100">
          <tr>
            <th className="border px-3 py-1">Documento</th>
            <th className="border px-3 py-1">Nombre</th>
            <th className="border px-3 py-1">Estado</th>
            <th className="border px-3 py-1">Fecha Registro</th>
            <th className="border px-3 py-1">Nota</th>
            <th className="border px-3 py-1">Acción</th>
          </tr>
        </thead>
        <tbody>
          {inscripciones.map((inscrito) => (
            <tr key={inscrito.docInscr}>
              <td className="border px-3 py-1">{inscrito.docInscr}</td>
              <td className="border px-3 py-1">{inscrito.nombre}</td>
              <td className="border px-3 py-1">{inscrito.Est === "1" ? "Inscrito" : "Cancelado"}</td>
              <td className="border px-3 py-1">{new Date(inscrito.fecreg).toLocaleDateString()}</td>
              <td className="border px-3 py-1">{inscrito.Nota ?? "-"}</td>
              <td className="border px-3 py-1">
                <button
                  onClick={() => abrirModalCalificar(inscrito.nombre, inscrito.docInscr)}
                  className="bg-blue-600 text-white px-2 py-1 rounded hover:bg-blue-700 text-xs"
                >
                  Calificar
                </button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
)}
</div>
);
})}
</div>
)}
</div>
</div>