import { Injectable } from '@nestjs/common';
import { PrismaService } from '../prisma.service';

@Injectable()
export class ListasService {
  constructor(private prisma: PrismaService) {}

  async obtenerEspecificaciones(): Promise<{ id: number; especificacion: string }[]> {
    return this.prisma.listas.findMany({
      where: { Tipo: 1 },
      select: {
        id: true,
        Especificacion: true,
      },
    });
  }
}




import { Controller, Get } from '@nestjs/common';
import { ListasService } from './listas.service';

@Controller('listas')
export class ListasController {
  constructor(private readonly listasService: ListasService) {}

  @Get('especificaciones')
  async obtenerEspecificaciones() {
    return this.listasService.obtenerEspecificaciones();
  }
}