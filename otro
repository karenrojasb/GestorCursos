"use client";

import { useState } from "react";
import { useRouter } from "next/navigation";

export default function LoginPage() {
  const router = useRouter();
  const [idEmp, setIdEmp] = useState("");
  const [error, setError] = useState("");

  const handleLogin = async (e: React.FormEvent) => {
    e.preventDefault();
    setError("");

    try {
      const response = await fetch("http://localhost:8090/api/usuario/iniciar-sesion", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ idEmp }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || "Error al iniciar sesi칩n");
      }

      localStorage.setItem("usuario", JSON.stringify(data));
      router.push("/"); // Redirigir a la p치gina principal
    } catch (err: any) {
      setError(err.message);
    }
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
      <h1 className="text-3xl font-bold text-[#990000] mb-6">Iniciar Sesi칩n</h1>
      <form onSubmit={handleLogin} className="bg-white p-6 rounded shadow-md">
        <label className="block mb-2">Identificaci칩n:</label>
        <input
          type="text"
          value={idEmp}
          onChange={(e) => setIdEmp(e.target.value)}
          className="border p-2 rounded w-full"
        />
        {error && <p className="text-red-500 mt-2">{error}</p>}
        <button type="submit" className="mt-4 bg-[#990000] text-white px-4 py-2 rounded">
          Ingresar
        </button>
      </form>
    </div>
  );
}