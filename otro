<div key={cursoId} className="rounded-xl shadow-lg border border-gray-200 overflow-hidden transition hover:shadow-xl">
  <div className="flex justify-between items-center bg-gradient-to-r from-[#990000] to-[#b30000] px-5 py-4 text-white">
    <div>
      <h3 className="text-xl font-semibold">{cursoNombre}</h3>
      <p className="text-sm">
        <span className="font-medium">Inicio:</span> {fechaInicio} &nbsp; | &nbsp;
        <span className="font-medium">Fin:</span> {fechaFin}
      </p>
    </div>
    <div className="flex gap-3">
      <button
        onClick={() => handleDownloadExcelByCurso(Number(cursoId))}
        className="flex items-center bg-white text-[#990000] font-semibold px-4 py-1.5 rounded-lg hover:bg-gray-100 transition"
      >
        <ArrowDownTrayIcon className="h-5 w-5 mr-2" />
        Excel
      </button>
      <button
        onClick={() => toggleCurso(Number(cursoId))}
        className="flex items-center bg-white text-[#990000] font-semibold px-4 py-1.5 rounded-lg hover:bg-gray-100 transition"
      >
        {cursoAbierto ? (
          <>
            <ChevronUpIcon className="h-5 w-5 mr-2" />
            Ocultar
          </>
        ) : (
          <>
            <ChevronDownIcon className="h-5 w-5 mr-2" />
            Ver más
          </>
        )}
      </button>
    </div>
  </div>

  {cursoAbierto && (
    <div className="bg-white px-6 py-4 border-t border-gray-200 animate-fade-in">
      <h4 className="text-lg font-semibold text-[#990000] text-center mb-4">Lista de Inscritos</h4>
      <table className="w-full table-auto text-sm">
        <thead className="bg-gray-100 text-[#990000]">
          <tr>
            <th className="p-2 text-left">Nombre</th>
            <th className="p-2 text-left">Documento</th>
            <th className="p-2 text-left">Fecha Inscripción</th>
            <th className="p-2 text-left">Nota</th>
          </tr>
        </thead>
        <tbody>
          {inscripciones.map((insc, index) => (
            <tr
              key={insc.id}
              className={`${index % 2 === 0 ? "bg-white" : "bg-gray-50"} hover:bg-gray-100 transition`}
            >
              <td className="p-2">{insc.nombre}</td>
              <td className="p-2">{insc.docInscr}</td>
              <td className="p-2">{new Date(insc.fecreg).toLocaleDateString()}</td>
              <td className="p-2">
                <div className="flex flex-col items-start">
                  <span>{insc.Especificacion || "Sin Nota"}</span>
                  <button
                    onClick={() => abrirModalCalificar(insc.nombre, insc.docInscr)}
                    className="mt-1 inline-flex items-center text-white bg-green-600 px-2 py-1 rounded-md hover:bg-green-700 transition text-xs"
                  >
                    <PlusCircleIcon className="w-4 h-4 mr-1" />
                    Calificar
                  </button>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  )}
</div>