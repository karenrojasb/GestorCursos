<label className="block font-semibold text-gray-700">
  Profesor:
  <select
    name="Profesor"
    value={formData.Profesor || ""} // Asegurar que no sea `undefined`
    className="w-full border p-2 rounded-lg focus:ring-2 focus:ring-[#990000] outline-none"
    onChange={(e) =>
      setFormData((prev) => ({
        ...prev,
        Profesor: Number(e.target.value), // Convertir a número
      }))
    }
    required
  >
    <option value="">Selecciona una opción</option>
    {profesores.map((profesor) => (
      <option key={profesor.id_emp} value={profesor.id_emp}>
        {profesor.nombre}
      </option>
    ))}
  </select>
</label>

