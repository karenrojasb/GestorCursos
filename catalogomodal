<td className="border p-2 text-left space-y-1">
  {curso.NombreProfesor?.trim() ? (
    <div>
      <span className="font-semibold">Principal:</span> {curso.NombreProfesor}
    </div>
  ) : null}

  {curso.SegundoPro?.toString().trim() && curso.SegundoPro !== 0 ? (
    <div>
      <span className="font-semibold">Segundo:</span> {curso.SegundoPro}
    </div>
  ) : null}

  {curso.Proexterno?.trim() ? (
    <div>
      <span className="font-semibold">Externo:</span> {curso.Proexterno}
    </div>
  ) : null}

  {!curso.NombreProfesor?.trim() && !curso.SegundoPro?.toString().trim() && !curso.Proexterno?.trim() && (
    <span className="text-gray-500">Sin profesor asignado</span>
  )}
</td>