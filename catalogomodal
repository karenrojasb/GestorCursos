import { Injectable } from '@nestjs/common';
import { PrismaService } from 'src/prisma/prisma.service';

@Injectable()
export class InscripcionService {
  constructor(private prisma: PrismaService) {}

  async getInscripciones() {
    return this.prisma.inscripciones.findMany({
      include: {
        Cursos: { select: { id: true, NombreCurso: true } },
      },
    });
  }

  async inscribirUsuario(docInscr: string, idCur: number) {
    // Verificar si el usuario ya est치 inscrito en el curso
    const existe = await this.prisma.inscripciones.findFirst({
      where: { docInscr, idCur },
    });

    if (existe) {
      return { mensaje: "El usuario ya est치 inscrito en este curso" };
    }

    // Insertar la inscripci칩n en la base de datos
    const nuevaInscripcion = await this.prisma.inscripciones.create({
      data: {
        docInscr,
        idCur,
      },
    });

    return { mensaje: "Inscripci칩n exitosa", inscripcion: nuevaInscripcion };
  }
}