useEffect(() => {
  if (!courseId || !isOpen || profesores.length === 0) return; // Esperar a que profesores se cargue

  setLoading(true);
  setError(null);

  console.log("Cargando curso con ID:", courseId);

  fetch(`http://localhost:8090/api/cursos/${courseId}`)
    .then((res) => {
      if (!res.ok) {
        throw new Error("Error al cargar el curso");
      }
      return res.json();
    })
    .then((data) => {
      console.log("Datos del curso recibidos:", data);
      if (data) {
        setFormData(data);
      } else {
        throw new Error("Datos del curso vacÃ­os");
      }
    })
    .catch((err) => {
      setError(err.message || "No se pudo cargar el curso");
    })
    .finally(() => {
      setLoading(false);
    });
}, [courseId, isOpen, profesores]); // Agregar `profesores` como dependencia




