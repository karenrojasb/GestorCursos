<label>
  Público:
  <select
    name="Publico"
    value={formData.Publico}
    onChange={(e) =>
      setFormData((prev) => ({
        ...prev,
        Publico: Number(e.target.value), // Guarda el ID como número
      }))
    }
    required
  >
    <option value="">Seleccione una opción</option>
    {opcionesPublico.map((opcion) => (
      <option key={opcion.id} value={opcion.id}>
        {opcion.Especificacion} {/* Muestra el nombre */}
      </option>
    ))}
  </select>
</label>