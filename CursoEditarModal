<select
  className="border rounded px-2 py-1 text-sm bg-white"
  value={String(inscrito.Notas?.[0]?.Nota ?? "")} // convertimos a string para que coincida
  onChange={(e) =>
    handleChangeEspecificacion(
      inscrito.docInscr,
      Number(e.target.value), // convertimos a nÃºmero para el backend
      nota?.id,
      inscrito.idCur,
    )
  }
>
  <option value="">-- Selecciona --</option>
  {opciones.map((opcion) => (
    <option key={opcion.id} value={String(opcion.id)}>
      {opcion.Especificacion}
    </option>
  ))}
</select>