<label>
  Profesor:
  {editandoProfesor ? (
    <select
      name="Profesor"
      value={formData.Profesor}
      onChange={(e) => {
        setFormData((prev) => ({
          ...prev,
          Profesor: Number(e.target.value),
        }));
        setEditandoProfesor(false); // Volver a modo texto despuÃ©s de seleccionar
      }}
      onBlur={() => setEditandoProfesor(false)} // Si el usuario hace clic fuera, vuelve a texto
      autoFocus
    >
      {profesores.map((profesor) => (
        <option key={profesor.id_emp} value={profesor.id_emp}>
          {profesor.nombre}
        </option>
      ))}
    </select>
  ) : (
    <span onClick={() => setEditandoProfesor(true)} className="cursor-pointer">
      {profesores.find((p) => p.id_emp === formData.Profesor)?.nombre || "Seleccionar profesor"}
    </span>
  )}
</label>