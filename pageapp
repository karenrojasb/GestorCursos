const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLSelectElement>) => {
  const { name, value, type } = e.target;

  setCurso((prev) => ({
    ...prev,
    [name]: type === "time" && value === "" ? null : value, // Si es un input de tipo "time" y está vacío, lo pone en `null`
  }));
};