const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLSelectElement>) => {
  const { name, value } = e.target;

  // Lista de campos que deben ser enteros
  const camposNumericos = ["Publico", "Linea", "Estado", "Modalidad", "Unidad", "Profesor", "SegundoPro", "IdTipoCurso"];

  setEditandoCurso((prevCurso) => {
    if (!prevCurso) return prevCurso; // Evita errores si el estado es null

    return {
      ...prevCurso,
      [name]: camposNumericos.includes(name) ? (value ? Number(value) : null) : value,
    };
  });
};