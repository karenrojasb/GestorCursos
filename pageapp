<label>
  Profesor:
  {editandoProfesor ? (
    <select
      name="Profesor"
      value={formData.Profesor}
      onChange={(e) => {
        setFormData((prev) => ({
          ...prev,
          Profesor: Number(e.target.value),
        }));
        setEditandoProfesor(false);
      }}
      onBlur={() => setEditandoProfesor(false)} // Si el usuario hace clic fuera, vuelve a mostrar el nombre
      autoFocus
    >
      {profesores.map((profesor) => (
        <option key={profesor.id_emp} value={profesor.id_emp}>
          {profesor.nombre}
        </option>
      ))}
    </select>
  ) : (
    <span 
      onClick={() => setEditandoProfesor(true)} 
      className="cursor-pointer border-b border-dashed border-gray-500 hover:text-blue-600"
    >
      {profesores.find((p) => p.id_emp === formData.Profesor)?.nombre || "Profesor no asignado"}
    </span>
  )}
</label>