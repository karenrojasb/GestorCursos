const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLSelectElement>) => {
  const { name, value } = e.target;

  // Lista de campos que deben ser enteros
  const camposNumericos = ["Publico", "Linea", "Estado", "Modalidad", "Unidad", "SegundoPro", "IdTipoCurso"];

  setEditandoCurso((prevCurso) => ({
    ...prevCurso,
    [name]: camposNumericos.includes(name) ? parseInt(value, 10) || null : value,
  }));
};