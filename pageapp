const handleGuardarEdicion = () => {
  if (cursoEditar) {
    setCursos((prevCursos) =>
      prevCursos.map((curso) => (curso.id === cursoEditar.id ? cursoEditar : curso))
    );
    setCursosFiltrados((prevCursos) =>
      prevCursos.map((curso) => (curso.id === cursoEditar.id ? cursoEditar : curso))
    );
    setCursoEditar(null);
  }
};