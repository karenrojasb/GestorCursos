<label>
  Profesor:
  <select
    name="Profesor"
    value={formData.Profesor} // Se asegura de que el select tenga el ID correcto
    onChange={(e) =>
      setFormData((prev) => ({
        ...prev,
        Profesor: Number(e.target.value),
      }))
    }
    required
  >
    {/* Mostrar el profesor actual como opciÃ³n por defecto */}
    {formData.Profesor && profesores.some((p) => p.id_emp === formData.Profesor) ? (
      <option value={formData.Profesor}>
        {profesores.find((p) => p.id_emp === formData.Profesor)?.nombre}
      </option>
    ) : (
      <option value="">Seleccione un profesor</option>
    )}

    {/* Lista de profesores disponibles */}
    {profesores.map((profesor) => (
      <option key={profesor.id_emp} value={profesor.id_emp}>
        {profesor.nombre}
      </option>
    ))}
  </select>
</label>