import CursoEditarModal from "./CursoEditarModal";

// Dentro del componente CatalogoModal
{
  editandoCurso && (
    <CursoEditarModal
      curso={editandoCurso}
      onClose={() => setEditandoCurso(null)}
      onSave={(cursoActualizado) => {
        // Aquí puedes manejar la actualización del curso en el estado
        setCursos(prevCursos => prevCursos.map(c => c.id === cursoActualizado.id ? cursoActualizado : c));
        setCursosFiltrados(prevCursos => prevCursos.map(c => c.id === cursoActualizado.id ? cursoActualizado : c));
      }}
    />
  );
}