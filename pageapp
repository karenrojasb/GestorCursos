<label>
  Periodo:
  <select
    name="Periodo"
    value={formData.Periodo}
    onChange={(e) =>
      setFormData((prev) => ({
        ...prev,
        Periodo: Number(e.target.value), 
      }))
    }
    required
  >
    <option value="">Seleccione una opci√≥n</option>
    {opcionesPeriodos.map((opcion, index) => (
      <option key={index} value={opcion.periodo}>
        {opcion.periodo}
      </option>
    ))}
  </select>
</label>