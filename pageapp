          <label>
            Modalidad:
            <select name="Modalidad" value={formData.Modalidad} onChange={handleChange} required>
              {opcionesModalidad.map((opcion) => (
                <option key={opcion.id} value={opcion.id}>
                  {opcion.Especificacion}
                </option>
              ))}
            </select>
          </label>