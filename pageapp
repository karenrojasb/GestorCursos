async obtenerPorIdInscrito(idInscrito: number) {
  const notas = await this.prisma.notas.findMany({
    where: { idInscrito },
    include: {
      Listas: {
        select: {
          Especificacion: true,
        },
      },
    },
  });

  const notasConNombreCurso = await Promise.all(
    notas.map(async (nota) => {
      const curso = await this.prisma.cursos.findFirst({
        where: {
          id: nota.idCurso, // este es el id del curso
        },
        select: {
          NombreCurso: true,
        },
      });

      return {
        ...nota,
        NombreCurso: curso?.NombreCurso || null,
      };
    })
  );

  return notasConNombreCurso;
}