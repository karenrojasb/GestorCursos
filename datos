"use client";

import { useRouter } from "next/navigation";
import MainButtons from "../components/mainbuttons";
import { motion } from "framer-motion";
import { useEffect, useState } from "react";

export default function HomePage() {
  const router = useRouter();
  const mensaje = "Bienvenido a Gestión de Cursos";
  const [textoMostrado, setTextoMostrado] = useState<string[]>([]);
  const [usuario, setUsuario] = useState<string | null>(null);

  useEffect(() => {
    const usuarioGuardado = localStorage.getItem("usuario");
    setUsuario(usuarioGuardado);

    if (!usuarioGuardado) {
      router.push("/login");
    }
  }, [router]);

  useEffect(() => {
    let index = 0;
    const interval = setInterval(() => {
      setTextoMostrado((prev) => [...prev, mensaje[index]]);
    }, 50);
    return () => clearInterval(interval);
  }, []);

  // Si el usuario aún no está definido, no renderizamos la página (evitamos parpadeo)
  if (!usuario) {
    return null;
  }

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
      <h1 className="text-3xl font-bold text-[#990000] mb-6 flex space-x-1">
        {mensaje.split("").map((letra, index) => (
          <motion.span
            key={index}
            initial={{ opacity: 0, y: -10 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.05, delay: index * 0.05 }}
          >
            {letra === " " ? "\u00A0" : letra}
          </motion.span>
        ))}
      </h1>

      {/* Solo mostramos los botones si hay usuario autenticado */}
      {usuario && <MainButtons onSelect={(section) => router.push(`/${section}`)} esAdmin={true} />}
    </div>
  );
}