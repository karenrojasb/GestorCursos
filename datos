// OBTENER LISTA DE PÃšBLICO
async obtenerPublicos() {
  return this.prisma.$queryRaw<{ id: number; Especificacion: string }[]>`
    SELECT id, Especificacion FROM gescur.listas WHERE Tipo = 1
  `;
}

// OBTENER LISTA DE ESTADOS
async obtenerEstados() {
  return this.prisma.$queryRaw<{ id: number; Especificacion: string }[]>`
    SELECT id, Especificacion FROM gescur.listas WHERE Tipo = 4
  `;
}

// OBTENER LISTA DE TIPOS DE CURSO
async obtenerTiposCurso() {
  return this.prisma.$queryRaw<{ id: number; Especificacion: string }[]>`
    SELECT id, Especificacion FROM gescur.listas WHERE Tipo = 8
  `;
}




@Get('publicos')
getPublicos() {
  return this.cursosService.obtenerPublicos();
}

@Get('estados')
getEstados() {
  return this.cursosService.obtenerEstados();
}

@Get('tipos-curso')
getTiposCurso() {
  return this.cursosService.obtenerTiposCurso();
}