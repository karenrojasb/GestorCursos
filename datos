useEffect(() => {
  if (formData.Profesor && !profesores.some(p => p.id_emp === formData.Profesor)) {
    setFormData((prev) => ({ ...prev, Profesor: "" }));
  }
  if (formData.SegundoPro && !profesores.some(p => p.id_emp === formData.SegundoPro)) {
    setFormData((prev) => ({ ...prev, SegundoPro: "" }));
  }
}, [profesores, formData.Profesor, formData.SegundoPro]);