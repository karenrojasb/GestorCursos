// OBTENER LOS CURSOS POR DOCINSCR DEL PROFESOR Y NOTA DEL INSCRITO
async getCoursesTeacher(idProfesor: number) {
  return this.prisma.$queryRawUnsafe<
    Array<{
      id: number;
      idCur: number;
      NombreCurso: string;
      Profesor: number;
      SegundoPro: number;
      Lugar: string;
      Inicio: Date;
      Fin: Date;
      docInscr: string;
      nombre: string | null;
      fecreg: Date;
      rol: string;
      CupoMax: number | null;
      Nota: number | null; // AGREGADO
    }>
  >(
    `SELECT 
      i.id,
      i.idCur,
      c.NombreCurso,
      c.Profesor,
      c.SegundoPro,
      c.Lugar,
      c.Inicio,
      c.Fin,
      i.docInscr,
      e.nombre,
      i.fecreg,
      c.CupoMax,
      n.Nota, -- AGREGADO
      CASE 
        WHEN c.Profesor = ${idProfesor} THEN 'Titular'
        WHEN c.SegundoPro = ${idProfesor} THEN 'Segundo'
        ELSE 'Otro'
      END AS rol
    FROM gescur.Cursos c
    LEFT JOIN gescur.Inscripciones i ON i.idCur = c.id
    LEFT JOIN gescur.emp_nomina e ON i.docInscr = e.id_emp
    LEFT JOIN gescur.Notas n ON i.id = n.idInscrito -- AGREGADO: Uniendo Inscripciones con Notas
    WHERE c.Profesor = ${idProfesor} OR c.SegundoPro = ${idProfesor}`
  );
}